{{> admin_header }}

<form action="/admin/menu/modify" method="post">
    <div class="form-row">
        <div class="col">
            <input type="text" class="form-control" name="id" placeholder="ID" />
        </div>
        <div class="col">
            <input type="text" class="form-control" name="class_id" placeholder="CLASS_ID" />
        </div>
        <div class="col">
            <input type="text" class="form-control" name="menu" placeholder="MENU" />
        </div>
        <div class="col">
            <input type="text" class="form-control" name="price" placeholder="PRICE" />
        </div>
        <div class="col">
            <input type="text" class="form-control" name="comment" placeholder="COMMENT" />
        </div>
        <div class="col">
            <input type="text" class="form-control" name="image" placeholder="IMAGE" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary col-md">MODIFY</button>
        </div>
    </div>
</form>