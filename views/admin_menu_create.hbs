    <br>
    <form action="/admin/menu/create" method="post">
        <div class="form-row">
            <div class="col-1">
                <input type="text" class="form-control" name="class_id" placeholder="CLASS" />
            </div>
            <div class="col-3">
                <input type="text" class="form-control" name="menu" placeholder="MENU" />
            </div>
            <div class="col-1">
                <input type="text" class="form-control" name="price" placeholder="PRICE" />
            </div>
            <div class="col-4">
                <input type="text" class="form-control" name="comment" placeholder="COMMENT" />
            </div>
            <div class="col-2">
                <input type="text" class="form-control" name="image" placeholder="IMAGE" />
            </div>
            <div class="col-1">
                <button type="submit" class="btn btn-primary">SUBMIT</button>
            </div>
        </div>
    </form>
</div>